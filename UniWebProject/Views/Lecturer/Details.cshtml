@model UniWebProject.Models.Lecturer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Lecturer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Lecturer Name
        </dt>

        <dd>
            @Model.LecName
        </dd>

        <dt>
            Salary
        </dt>

        <dd>
            @Model.Salary
        </dd>

        <dt>
            Entry Date
        </dt>

        <dd>
            @Model.EntryDate.ToString("dd.MM.yyyy")
        </dd>
            
        <dt>
            Job
        </dt>

        <dd>
            @Model.Job
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
